{
	"name": "@skyra/decorators",
	"version": "2.3.0",
	"description": "TypeScript decorators for Skyra",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@skyra",
	"license": "MIT",
	"private": false,
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint --ext ts src tests --fix",
		"test": "jest",
		"docs": "typedoc",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"update": "yarn upgrade-interactive --latest",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@klasa/core": "github:dirigeants/core#build",
		"@skyra/eslint-config": "^5.3.3",
		"@types/jest": "^26.0.14",
		"@types/ws": "^7.2.7",
		"@typescript-eslint/eslint-plugin": "^4.3.0",
		"@typescript-eslint/parser": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.10.0",
		"husky": "^4.3.0",
		"jest": "^26.4.2",
		"jest-circus": "^26.4.2",
		"klasa": "github:dirigeants/klasa#build",
		"lint-staged": "^10.4.0",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.0.2",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.4.1",
		"typedoc": "^0.19.2",
		"typescript": "^4.0.3"
	},
	"peerDependencies": {
		"@klasa/core": "github:dirigeants/core#build",
		"klasa": "github:dirigeants/klasa#build"
	},
	"files": [
		"dist",
		"!dist/tsconfig.tsbuildinfo"
	],
	"engines": {
		"node": ">=12"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/decorators.git"
	},
	"bugs": {
		"url": "https://github.com/skyra-project/decorators/issues"
	},
	"keywords": [
		"skyra",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"bot",
		"decorators"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
		"dot-prop": "^5.2.0"
	}
}
